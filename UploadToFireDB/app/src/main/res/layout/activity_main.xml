<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayoutCompat"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/etBookName"
        android:layout_width="180sp"
        android:layout_height="48dp"
        android:layout_marginTop="132dp"
        android:hint="name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.45"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etPageNumber"
        android:layout_width="180dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:hint="page number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.45"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etBookName" />

    <Button
        android:id="@+id/bUpload"
        android:layout_width="180dp"
        android:layout_height="48dp"
        android:text="upload"
        app:layout_constraintBottom_toTopOf="@+id/tvReadingList"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.45"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etPageNumber"
        app:layout_constraintVertical_bias="0.64" />

    <TextView
        android:id="@+id/tvReadingList"
        android:layout_width="match_parent"
        android:layout_height="240sp"
        android:layout_marginHorizontal="24sp"
        android:hint="@string/book_list"
        android:padding="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etPageNumber"
        app:layout_constraintVertical_bias="0.302" />

    <TextView
        android:id="@+id/tvPagesRead"
        android:layout_width="320dp"
        android:layout_height="48dp"
        android:background="@drawable/black"
        android:gravity="center"
        android:text="So far, you read "
        android:textSize="22sp"
        app:layout_constraintBottom_toTopOf="@+id/etBookName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bGetPage"
        android:layout_width="180dp"
        android:layout_height="48dp"
        android:text="Get page #"
        app:layout_constraintBottom_toTopOf="@+id/tvPageNumber"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bUpload"
        app:layout_constraintVertical_bias="0.933" />

    <TextView
        android:id="@+id/tvPageNumber"
        android:layout_width="180dp"
        android:layout_height="48dp"
        android:layout_marginBottom="92dp"
        android:background="@drawable/black"
        android:gravity="right"
        android:text="0"
        android:textSize="37sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>